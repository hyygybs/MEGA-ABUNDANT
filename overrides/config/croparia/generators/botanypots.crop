@enabled=true
@path=botanypots/recipe/croparia/seed/{name}.json
@dependency=botanypots
{
  "type": "botanypots:crop",
  "seed": {
    "item": "{seed}"
  },
  "categories": [
    "crop", "farmland"
  ],
  "growthTicks": 1200,
  "display": {
    "type": "botanypots:aging",
    "block": "{crop_block}"
  },
  "drops": [
    {
      "chance": 1.00,
      "output": {
        "item": "{fruit}"
      }
    },
    {
      "chance": 0.01,
      "output": {
        "item": "{seed}"
      }
    }
  ]
}